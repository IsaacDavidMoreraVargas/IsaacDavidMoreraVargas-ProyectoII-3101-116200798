@{
    Layout = "_Layout_interno_dos";
}
@model WebApplication_Proyecto_II__Morera_Vargas_Isaac.Models.asociar_stock;
<div class="contenedor-columna primero">
    <div class="contenedor-datos">
        <label class="titulo-valor color-padre">Consulta Codigo Libro</label>
        <select runat="server" class="input-valor border-hijo" id="" value="" onchange="consultaOnline(0 ,this); evaluar_vacios()">
            <option lass="input-valor border-hijo" value="---">---</option>
            @{
                if (ViewBag.ListaCodigos != null)
                {
                    foreach (WebApplication_Proyecto_II__Morera_Vargas_Isaac.Models.asociar_libro libros in ViewBag.ListaCodigos)
                    {
                        <option lass="input-valor border-hijo" value=@libros.Codigo_Libro>@libros.Codigo_Libro - @libros.Nombre_Libro</option>
                    }
                }
            }

        </select>
    </div>
    <div class="contenedor-datos">
        <label class="titulo-valor color-padre">Consulta Codigo Cliente</label>
        <select runat="server" class="input-valor border-hijo" id="" value="" onchange="consultaOnline(1 ,this); evaluar_vacios()">
            <option lass="input-valor border-hijo" value="---">---</option>
            @{
                if (ViewBag.ListaCliente != null)
                {
                    foreach (WebApplication_Proyecto_II__Morera_Vargas_Isaac.Models.asociar_cliente clientes in ViewBag.ListaCliente)
                    {
                        <option lass="input-valor border-hijo" value=@clientes.Codigo_Cliente>@clientes.Codigo_Cliente - @clientes.Nombre_Cliente</option>
                    }
                }
            }
            
        </select>
    </div>
</div>

<div class="contenedor-columna">
    <form method="post" enctype="multipart/form-data" asp-controller="Administrador" asp-action="RegistrarIngreso">
        <div class="contenedor-fila border-padre">
            <div class="contenedor-titulo color-titulo-padre">Datos Registro</div>
            <div class="contenedor-datos">
                <label class="titulo-valor color-padre">Codigo Libro</label>
                <input readonly runat="server" asp-for="Codigo_Libro" class="input-valor border-hijo" id="" value="" type="number" onkeyup="" required />
            </div>
            <div class="contenedor-datos">
                <label class="titulo-valor color-padre">Descripcion Corta Articulo</label>
                <input runat="server" asp-for="Descripcion_Articulo" class="input-valor border-hijo" id="" value="" type="text" onkeyup="evaluar_vacios()" maxlength="30" required />
            </div>
            <div class="contenedor-datos">
                <label class="titulo-valor color-padre">Precio Articulo</label>
                <input runat="server" asp-for="Precio_Articulo" class="input-valor border-hijo" id="" value="" type="number" step="any" onkeyup="evaluar_vacios(); evaluar_float(this)" maxlength="30" required />
            </div>
            <div class="contenedor-datos">
                <label class="titulo-valor color-padre">Codigo Cliente</label>
                <input readonly runat="server" asp-for="Codigo_Cliente" class="input-valor border-hijo" id="" value="" type="number" onkeyup="evaluar_vacios()" maxlength="30" required />
            </div>
            <div class="contenedor-datos">
                <label class="titulo-valor color-padre">Fecha Ingreso</label>
                <input runat="server" asp-for="Fecha_Ingreso" class="box-input-valor border-hijo" readonly id="" value="@TempData["Fecha_Actual"]" type="text" onchange="evaluar_vacios()" maxlength="30" required />
                <input disabled class="input-date-valor" id="" value="@TempData["Fecha_Actual"]" type="date" onchange="actualizar_fecha(0,'box-input-valor','input-date-valor',false)" required />
            </div>
        </div>

        <input class="button-to-submit" type="submit" value="Guardar" onclick="confirm('¿Seguro de guardar?')" />
    </form>
</div>